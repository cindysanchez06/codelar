{% extends 'base.html.twig' %}

{% block title %}Pokemones{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="title">Pokemones</h1>

        <div class="row">
            {% for item in pokemons %}
                <div class="col-md-4">
                    <div class="">
                        <div class="">
                            <h3 class="">{{ item.name }}</h3>
                            <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{{ item.id }}.png">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}